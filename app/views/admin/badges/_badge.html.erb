<tr>
  <td><%= badge.title %></td>
  <td><%= badge.file_name %></td>
  <td><%= badge.rule_name %></td>
  <td><%= badge.rule_value %></td>

  <td align="aligne-middle"><%= image_tag(badge.file_name, :alt => "badge_#{badge.title}") %></td>
  <td align="aligne-middle">
    <%= link_to 'show', admin_badge_path(badge) %> |
    <%= link_to 'edit', edit_admin_badge_path(badge) %> |
    <%= link_to 'delete', admin_badge_path(badge),
                method: :delete,
                data: { confirm: 'Are you sure?' }%>
  </td>
</tr>