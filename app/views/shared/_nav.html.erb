<nav>

  <h1>
    <%= link_to 'TestGuru', root_path %>
  </h1>

  <% unless logged_in? %>
    <td><%= link_to 'SignUp', signup_path %></td>
    <td><%= link_to 'LogIn', login_path %></td>
  <% end %>

  <% if logged_in? %>
    <td>
    <%= link_to "Exit",
                logout_path,
                method: :delete,
                data: {confirm: "Exit. Are you sure?"} %>
    </td>
  <% end %>

  <%# if logged_in? %>
  <% if @current_user %>
    <p class="nav user">Welcome, <b><%= current_user.name %></b> Guru </p>
  <% end %>

</nav>
